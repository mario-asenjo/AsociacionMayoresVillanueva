<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- Forzamos LIGHT para evitar fondos negros por DayNight mientras estabilizas la UI -->
  <style name="Theme.AsociacionMayoresVillanueva" parent="Theme.Material3.DayNight.NoActionBar">
    <item name="colorPrimary">@color/blue_primary</item>
    <item name="colorSecondary">@color/yellow_primary</item>
    <item name="android:windowBackground">@color/background_main</item>
    <item name="android:statusBarColor">@color/blue_primary</item>
  </style>

  <style name="Theme.AsociacionMayoresVillanueva.Splash" parent="Theme.SplashScreen">
    <item name="windowSplashScreenBackground">@color/background_main</item>
    <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
    <item name="windowSplashScreenAnimationDuration">600</item>

    <!-- IMPORTANTE: despuÃ©s del splash, aplica tu theme normal -->
    <item name="postSplashScreenTheme">@style/Theme.AsociacionMayoresVillanueva</item>
  </style>


</resources>
